{
  "name": "@math-genius/mobile",
  "version": "2.0.0",
  "private": true,
  "description": "Math Genius Mobile App - React Native",
  "main": "index.js",
  "scripts": {
    "start": "react-native start",
    "dev": "react-native start",
    "ios": "react-native run-ios",
    "android": "react-native run-android",
    "build:ios": "react-native build-ios --mode Release",
    "build:android": "react-native build-android --mode release",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "clean": "react-native clean",
    "pod-install": "cd ios && pod install"
  },
  "dependencies": {
    "@math-genius/core": "workspace:*",
    "@math-genius/shared": "workspace:*",
    "@math-genius/ui": "workspace:*",
    "@react-native-async-storage/async-storage": "^1.19.0",
    "@react-native-community/netinfo": "^9.4.0",
    "@react-native-firebase/app": "^18.3.0",
    "@react-native-firebase/auth": "^18.3.0",
    "@react-native-firebase/firestore": "^18.3.0",
    "@react-native-firebase/messaging": "^18.3.0",
    "@react-native-firebase/analytics": "^18.3.0",
    "@react-navigation/native": "^6.1.0",
    "@react-navigation/stack": "^6.3.0",
    "@react-navigation/bottom-tabs": "^6.5.0",
    "@tanstack/react-query": "^4.32.0",
    "react": "18.2.0",
    "react-native": "0.74.0",
    "react-native-device-info": "^10.8.0",
    "react-native-elements": "^3.4.3",
    "react-native-game-engine": "^1.2.0",
    "react-native-gesture-handler": "^2.12.0",
    "react-native-keychain": "^8.1.0",
    "react-native-linear-gradient": "^2.8.0",
    "react-native-permissions": "^3.8.0",
    "react-native-push-notification": "^8.1.0",
    "react-native-qrcode-generator": "^1.4.0",
    "react-native-reanimated": "^3.4.0",
    "react-native-safe-area-context": "^4.7.0",
    "react-native-screens": "^3.22.0",
    "react-native-share": "^9.4.0",
    "react-native-sound": "^0.11.2",
    "react-native-svg": "^13.10.0",
    "react-native-tts": "^4.1.0",
    "react-native-vector-icons": "^10.0.0",
    "react-native-voice": "^3.2.4",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@babel/runtime": "^7.22.0",
    "@react-native/babel-preset": "^0.74.0",
    "@react-native/eslint-config": "^0.74.0",
    "@react-native/metro-config": "^0.74.0",
    "@react-native/typescript-config": "^0.74.0",
    "@testing-library/react-native": "^12.1.0",
    "@types/jest": "^29.5.0",
    "@types/react": "^18.2.0",
    "@types/react-native": "^0.72.0",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.5.0",
    "detox": "^20.11.0",
    "jest": "^29.5.0",
    "metro-react-native-babel-preset": "^0.76.0",
    "react-test-renderer": "18.2.0"
  },
  "jest": {
    "preset": "react-native",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|@react-native|react-native-.*|@react-navigation)/)"
    ]
  },
  "detox": {
    "testRunner": "jest",
    "runnerConfig": "e2e/config.json",
    "configurations": {
      "ios": {
        "device": "simulator",
        "app": "ios.debug"
      },
      "android": {
        "device": "emulator",
        "app": "android.debug"
      }
    }
  }
}